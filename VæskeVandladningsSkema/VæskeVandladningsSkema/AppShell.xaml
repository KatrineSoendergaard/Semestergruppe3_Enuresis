<?xml version="1.0" encoding="utf-8" ?>
<Shell   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         xmlns:pages="clr-namespace:VaeskeVandladningsSkema.Pages"
         BackgroundColor="White"
         x:Class="VaeskeVandladningsSkema.AppShell">

    
    <!-- Login som startside, uden flyout -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate pages:LoginPage}" />

    
    <!-- Flyout-menu -->
    <FlyoutItem Title="Menu">
        <ShellContent Title="Menu" ContentTemplate="{DataTemplate pages:MenuPage}" Route="Dag1Page" />
    </FlyoutItem>

    <FlyoutItem Title="Information">
        <ShellContent Title="Information" ContentTemplate="{DataTemplate pages:InfoPage}" Route="Dag2Page" />
    </FlyoutItem>

    <FlyoutItem Title="Skema">
        <ShellContent Title="Skema" ContentTemplate="{DataTemplate pages:SkemaPage}" Route="Dag3Page" />
    </FlyoutItem>

    <FlyoutItem Title="Oversigt">
        <ShellContent Title="Oversigt" ContentTemplate="{DataTemplate pages:LogSkema}" Route="Dag4Page" />
    </FlyoutItem>

    
</Shell>
