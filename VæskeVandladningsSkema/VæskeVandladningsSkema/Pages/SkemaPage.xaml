<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaeskeVandladningsSkema.Pages.SkemaPage"
             BackgroundColor="White"
             Title="Skema">
    
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="White">
            <HorizontalStackLayout Spacing="15" Margin="0,20,0,10">
                <Label Text="Dato:" VerticalOptions="Center" />
                <Entry x:Name="DatoEntry" Placeholder="dd-mm-yyyy" WidthRequest="150" />
           
            </HorizontalStackLayout>

            <!-- TypiskDag + Info ikon -->
            <HorizontalStackLayout Spacing="5" Margin="0,0,0,10" VerticalOptions="Center">
                <Label Text="TypiskDag:" VerticalOptions="Center" />

                <!-- Checkbox + ikon i egen layout -->
                <HorizontalStackLayout Spacing="2" VerticalOptions="Center">
                    <CheckBox x:Name="TypiskDag" />
                    <Label x:Name="InfoIkon"
               Text="ℹ️"
               FontSize="18"
               VerticalOptions="Center"
               Margin="-10,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="InfoIkon_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <!-- Info tekst -->
                <Label x:Name="InfoText"
           Text="Har der været noget atypisk? Har dit barn været syg, har dit barn været stresset osv."
           IsVisible="False"
           FontSize="14"
           TextColor="Gray"
           VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="80,*,*,*,*" RowDefinitions="Auto" Margin="0,20,0,5">
                <Label Text="Tidspunkt" Grid.Column="0" FontAttributes="Bold" />
                <Label Text="Væskeindtag (ml)" Grid.Column="1" FontAttributes="Bold"/>
                <Label Text="Vandladning (ml)" Grid.Column="2" FontAttributes="Bold"/>
                <Label Text="Ufrivillig vandladning af urin" Grid.Column="3" FontAttributes="Bold"/>
                <Label Text="Aktivitet" Grid.Column="4" FontAttributes="Bold"/>
            </Grid>

            <Grid ColumnDefinitions="80,*,*,*,*" RowDefinitions="Auto" >
                <Entry Grid.Column="0" Placeholder="Fx 07:00" />
                <Entry Grid.Column="1" Placeholder="ml" />
                <Entry Grid.Column="2" Placeholder="ml" />
                <Entry Grid.Column="3" Placeholder="ja/nej" />
                <Entry Grid.Column="4" Placeholder="Aktivitet" />
            </Grid>

            <Button Text="Gem" Clicked="OnGemClicked" BackgroundColor="LightSteelBlue" Margin="0,20,0,5"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>