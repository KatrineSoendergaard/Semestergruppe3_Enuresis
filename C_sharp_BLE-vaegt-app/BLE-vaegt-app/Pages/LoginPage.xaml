<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BLE_vaegt_app.Pages.LoginPage"



BackgroundColor="White"
             Title="Login">


    <VerticalStackLayout Padding="100" VerticalOptions="Start" BackgroundColor="White">
        <Label Text="Væske- og Vandladningsskema" FontSize="Title" HorizontalOptions="Center" FontAttributes="Bold" />

        <Entry Placeholder="Indtast patientens fuldenavn"
               Text="{Binding Navn}"
               Margin="0,20,0,5" />

        <Entry Placeholder="Indtast patientens Cpr-nr."
               Text="{Binding Cpr}"
               Keyboard="Numeric"
               Margin="0,20,0,5" />

        <Button Text="Log In"
                BackgroundColor="LightSteelBlue"
                Command="{Binding LoginCommand}"
                Margin="0,20,0,5" />

    </VerticalStackLayout>

</ContentPage>

   
