<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BLE_vaegt_app.Pages.LoginPage"
             BackgroundColor="White"
             Title="Login">

    <VerticalStackLayout Padding="100" VerticalOptions="Start" BackgroundColor="White">
        <Label Text="VÃ¦ske- og Vandladningsskema" FontSize="Title" HorizontalOptions="Center" FontAttributes="Bold" />

        <Entry x:Name="NavnEntry" 
               Placeholder="Indtast navn og efternavn"
               Keyboard="Text"
               TextChanged="NavnEntry_TextChanged"
               Margin="0,20,0,5" />

        <Entry x:Name="CprEntry" 
               Placeholder="Indtast Cpr-nr." 
               Keyboard="Numeric"
               MaxLength="10"
               TextChanged="CprEntry_TextChanged"
               Margin="0,20,0,5" />

        <Button Text="Log In" BackgroundColor="LightSteelBlue" Clicked="LoginButton_Clicked" Margin="0,20,0,5" />
    </VerticalStackLayout>

</ContentPage>